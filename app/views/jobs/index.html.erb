<head>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/2.4.0/fullcalendar.js"></script>
  <!--link rel='stylesheet' href='fullcalendar/fullcalendar.css' /-->
  <!--script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script-->

  <!--script src='lib/jquery.min.js'></script-->
  <!--script src='lib/momentjs.min.js'></script-->
  <!--script src='fullcalendar/fullcalendar.js'></script-->
</head>

<div class="pagediv">
  <%= stylesheet_link_tag 'master' %>
  <div class="row" style="padding-top:100px;">
    <h1>Dashboard</h1>
    <br/>
      <div class="col-lg-3 col-md-6">
        <div class="panel panel-primary">
          <div class="panel-heading">
            <h3 class="panel-title">Total Interviews Scheduled</h3>
          </div>
          <div class="row">
            <div class="col-xs-3">
              <i class="fa fa-calendar-check-o fa-4x iconblue"></i>
            </div>
            <div class="col-xs-9 text-right">
              <div class="huge"><%=@totalinterviewsscheduled%></div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-lg-3 col-md-6">
        <div class="panel panel-green">
          <div class="panel-heading">
            <h3 class="panel-title">Total Internship Applications</h3>
          </div>
          <div class="row">
            <div class="col-xs-3">
              <i class="fa fa-file-o fa-4x icongreen"></i>
            </div>
            <div class="col-xs-9 text-right">
              <div class="huge"><%=@totalinternship_applications%></div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-lg-3 col-md-6">
        <div class="panel panel-yellow">
          <div class="panel-heading">
            <h3 class="panel-title">Total Volunteer Applications</h3>
          </div>
          <div class="row">
            <div class="col-xs-3">
              <i class="fa  fa-heart fa-4x iconyellow"></i>
            </div>
            <div class="col-xs-9 text-right">
              <div class="huge"><%=@totalvolunteer_applications%></div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-lg-3 col-md-6">
        <div class="panel panel-red">
          <div class="panel-heading">
            <h3 class="panel-title">Total Paid Employment Applicants</h3>
          </div>
          <div class="row">
            <div class="col-xs-3">
              <i class="fa fa-briefcase fa-4x iconred"></i>
            </div>
            <div class="col-xs-9 text-right">
              <div class="huge"><%=@totalpaidemployment_applications%></div>
            </div>
          </div>
        </div>
      </div>
  </div>
  <div class="panel panel-default" id="profiledetails">
    <div class="panel-heading">
      <h3 class="panel-title">Posted Jobs by me</h3>
    </div>

<table class="table table-condensed table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Qualifications</th>
      <th>Posted on</th>
      <th>Deadline</th>
      <th align="center">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.title %></td>
        <td><%= job.description %></td>
        <td><%= job.qualifications %></td>
        <td><%= job.postedon %></td>
        <td><%= job.deadline %></td>
        <td><%= link_to 'Show', job, class: "btn btn-link" %></td>
        <td><%= link_to 'Edit', edit_job_path(job), class: "btn btn-link" %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %></td>
        <td><%= link_to 'View Applicants', jobs_displayapplicantsforjob_path(:job_id => job.id,:admin_email => @email_id),  class: "btn btn-link" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Job', new_job_path, class: "btn btn-link" %>



</div>
